{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Welcome</h1>

    {% if user is not empty %}
        <p>Welcome, {{ user.email }}</p>

        <a href="/auth/logout">Logout</a>
    {% else %}
        <a href="/auth/login">Login</a>
        <a href="/auth/register">Register</a>
    {% endif %}

{% endblock %}
